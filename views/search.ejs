<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="#">
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
  <script src="/js/bootstrap.js"></script>
  <title>Search</title>
</head>

<body>
  <%- include('navbar'); -%>
    <div class="container">
      <%- include('flash'); -%>
        <div id="trending" class="my-5">
          <% if (option) { %> 
            <h2>Searching by <%= option %> for: <%= query %></h2>
          <% } else { %>
            <h2>Searching for: <%= query %></h2>
          <% } %>
          <div class="d-flex p-2 justify-content-center flex-wrap">
            <% for (let res of results) { %>
              <div class="movie-card m-3" style="width: 13.5rem;">
                <a href="/movie/<%= res.MOVIE_ID %>" class="text-decoration-none text-body">
                  <img src="<%= res.MOVIE_POSTER %>" class="card-img-top mb-2" alt="..."
                    style="width: 13.5rem; height: 20rem;">
                    <p class="card-title"><strong><%= res.MOVIE_TITLE %></strong></p>
                </a>
              </div>
              <% } %>
          </div>
        </div>
    </div>
</body>

</html>